{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Eval Main",
            "type": "debugpy",
            "request": "launch",
            "module": "eval.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Baseline",
            "type": "debugpy",
            "request": "launch",
            "module": "eval.baseline.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug Vitest Tests",
            "type": "node",
            "request": "launch",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "args": [
                "run"
            ],
            "smartStep": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Start Frontend Dev Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/ui",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Local:.*http://127.0.0.1:([0-9]+)",
                "uriFormat": "http://127.0.0.1:%s",
                "action": "debugWithEdge"
            }
        },
        {
            "name": "Debug Frontend (Edge)",
            "type": "msedge",
            "request": "launch",
            "url": "http://127.0.0.1:8007",
            "webRoot": "${workspaceFolder}/src/ui",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "/@/*": "${webRoot}/*"
            }
        },
        {
            "name": "Debug Backend API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8080",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack",
            "configurations": [
                "Debug Backend API",
                "Start Frontend Dev Server"
            ],
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "stopAll": true
        }
    ]
}